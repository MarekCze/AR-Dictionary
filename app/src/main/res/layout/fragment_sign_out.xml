<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/logoutLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/sign_out_horizontal_margin"
        android:layout_marginTop="@dimen/sign_out_vertical_margin"
        android:layout_marginEnd="@dimen/sign_out_horizontal_margin"
        android:layout_marginBottom="@dimen/sign_out_vertical_margin"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/logoutPromptTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_in_button_margin"
            android:text="@string/text_confirm_logout"
            android:textAlignment="center" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/word_card_margin"
            android:layout_marginLeft="@dimen/sign_in_button_margin"
            android:layout_marginRight="@dimen/sign_in_button_margin"
            android:text="@string/btn_sign_out" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>