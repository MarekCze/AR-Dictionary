<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_notebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/word_card_margin"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/relative_view_notebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/word_card_padding">

            <TextView
                android:id="@+id/notebookNameTextView"
                style="@style/CardView.Notebook"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                 />

            <TextView
                android:id="@+id/notebookDateTextView"
                style="@style/CardView.Notebook"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notebookNameTextView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="150dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>